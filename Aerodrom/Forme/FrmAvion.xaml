<Window x:Class="Aerodrom.Forme.FrmAvion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aerodrom.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni Avion" Height="350" Width="300">
    <Grid>
        <Label Content="Model:" HorizontalAlignment="Left" Margin="54,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Kompanija:" HorizontalAlignment="Left" Margin="32,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtModelAviona" HorizontalAlignment="Left" Margin="114,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbKompanija" HorizontalAlignment="Left" Margin="114,151,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="nazivKom" SelectedValuePath="avioKompanijaID"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="66,221,0,0" VerticalAlignment="Top" Width="76" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="167,221,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.493,0.553" Click="btnOtkazi_Click"/>

    </Grid>
</Window>
